<% include partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a cryptocurrency to your portfolio</h1>
  </div>
</div>

<div class="container portfolio-container">
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" placeholder="Name">
    </div>
    <div class="form-group">
      <label for="exchange">Exchange</label>
      <input type="text" class="form-control" id="exchange" placeholder="Exchange">
    </div>
    <div class="form-group order-group">
      <label for="order">Order</label>
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="order" id="buy" value="buy"> Buy
        </label>
      </div>
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="order" id="sell" value="sell"> Sell
        </label>
      </div>
    </div>
    <div class="form-group">
      <label for="units">Units</label>
      <input type="text" class="form-control" id="units" placeholder="Units">
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      <input type="text" class="form-control" id="price" placeholder="Price">
    </div>
    <div class="form-group">
      <label for="total">Total</label>
      <input type="text" class="form-control" id="total" placeholder="Total">
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
  </form>
</div>

<% include partials/footer %>
